{
  "name": "anki_code_cards",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "sh -c 'oxlint --type-aware ${1:-src/}' --",
    "lint:fix": "sh -c 'oxlint --type-aware --fix-dangerously ${1:-src/}' --",
    "format": "sh -c 'oxfmt ${1:-src/}' --",
    "format:check": "sh -c 'oxfmt --check ${1:-src/}' --",
    "typecheck": "tsgo --noEmit",
    "check": "bun run typecheck && bun run lint && bun run format:check",
    "test:e2e": "bunx playwright test",
    "build:app": "bun build ./src/index.html --outdir ./dist --minify",
    "build:css": "bunx @tailwindcss/cli -i ./src/styles.css -o ./src/output.css --minify",
    "build": "bun run build:css && bun run build:app",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/bun": "latest",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "^7.0.0-dev.20260130.1",
    "husky": "^9.1.7",
    "lnai": "^0.6.5",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "oxlint-tsgolint": "^0.11.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@tailwindcss/cli": "^4.1.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hotkeys-hook": "^5.2.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "shiki": "^3.22.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0",
    "usehooks-ts": "^3.1.1"
  }
}
